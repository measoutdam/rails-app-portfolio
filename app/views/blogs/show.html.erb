<div class="col-sm-8 blog-main">
  <div class="blog-post">
    <h2 class="blog-post-title">  <%= link_to @blog.title.upcase, @blog %></h2>
    <p>
      <%= link_to 'Edit', edit_blog_path(@blog) if logged_in?(:site_admin) %> |
      <%= link_to 'Back', blogs_path if logged_in?(:site_admin) %>
    </p>
    <p class="blog-post-meta">Published <%= distance_of_time_in_words @blog.created_at,Time.now %> ago, <%= link_to @blog.status, toggle_status_blog_path(@blog) if logged_in?(:site_admin) %></p>
    <p><%= @blog.body %></p>

    <% unless current_user.is_a? GuestUser %>
    <!-- Start of comment form  -->
      <%= form_for @comment, url: '#' do |f| %>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
      <% end %>
    <!-- End of comment form  -->
    <% end %>

    <!-- Start of comment -->
    <%= render @blog.comments %>
    <!-- End of comment -->
  </div>
</div>
