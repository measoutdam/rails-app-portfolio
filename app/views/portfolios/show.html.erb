<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio.main_image unless @portfolio.main_image.nil? %>
      <p>
      <b><%= link_to "View All Portfolio", portfolios_path %></b>
      </p>
    </div>
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>
      <em><%= @portfolio.subtitle %></em>
      <p><%= @portfolio.body %></p>
      <hr>
      <h3>Technologies used:</h3>
      <ul>
      <% @portfolio.technologies.each do |t|  %>
        <li><%= t.name  %></li>
      <% end %>
      </ul>

  </div>

</div>
</div>
