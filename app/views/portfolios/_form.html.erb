<%= form_with(model: @portfolio, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :portfolio_title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :portfolio_subtitle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: '10'%>
  </div>
  <div class="form-group">
    <%= form.fields_for :technologies do |technology_form| %>
      <%= technology_form.label :name  %>
      <%= technology_form.text_field :name, class: 'form-control'  %>
    <% end %>
  </div>
  <div class="actions">
    <%= form.submit 'Submit', class: 'btn btn-primary'%>
  </div>
<% end %>
